{
  "name": "Wallet",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "My first Chrome extension",
  "icons": {
    "16": "logo192.png",
    "48": "logo192.png",
    "128": "logo512.png"
  },
  "background": {
    "service_worker" : "background.js"
  },
  "browser_action": {
    "default_icon": "logo512.png",
    "default_popup": "index.html"
  },
  "permissions": [
    "activeTab"
  ],
  "action": {
    "default_popup": "index.html"
  }
}